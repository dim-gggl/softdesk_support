[flake8]
# Maximum characters per line (compatible with Black)
max-line-length = 79

# Exclude common directories and files
exclude = [
    ".git",
    "__pycache__",
    "build",
    "dist",
    ".venv",
    "venv",
    ".eggs",
    "migrations",
    ".svn",
    ".cursor",
    ".DS_Store",
]
# Ignore specific errors/warnings (handled elsewhere)
ignore = E203,W503,D100,D104,D107

# Select codes from core and plugins
select = C,E,F,W,B,B9,ANN

# McCabe complexity threshold
max-complexity = 10

# Plugin: flake8-docstrings
# Use Google style for docstrings
# docstring-convention = google

# Plugin: flake8-import-order
# import-order-style = google
# application-import-names = my_package

# Plugin: flake8-annotations
# Enable annotation checks
# enable-extensions = ANN

# Plugin: flake8-bandit (security checks)
# extend-select = B

# Per-file-ignores (allow certain codes in tests)
# per-file-ignores =
    # tests/*: D,ANN,S101

# Reporting options
show-source = True
statistics = True
output-file = flake8-report.txt